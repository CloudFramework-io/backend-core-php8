{
  "name": "company-name/project-name",
  "description": "Your description. More info https://cloudframework.io/docs/es/developers/php-framework/backend-core-php8",
  "require": {
    "mcp/sdk": "^0.3.0",
    "nyholm/psr7": "^1.8",
    "nyholm/psr7-server": "^1.1",
    "laminas/laminas-httphandlerrunner": "^2.10",
    "cloudframework-io/backend-core-php8": "^8.4.35"
  },
  "autoload": {
    "psr-4": {
      "App\\": ".",
      "App\\Mcp\\": "mcp/",
      "App\\CFMcp\\": "vendor/cloudframework-io/backend-core-php8/src/mcp/"
    }
  },
  "scripts": {
    "serve": "php -S localhost:8000 vendor/cloudframework-io/backend-core-php8/src/mcp-server.php",
    "inspector-local": "npx @modelcontextprotocol/inspector http://localhost:8000",
    "credentials": [
      "[ -d ./local_data ] && echo \"installing ./local_data\" || mkdir  ./local_data ",
      "gcloud auth application-default login",
      "mv ~/.config/gcloud/application_default_credentials.json local_data/"
    ],
    "autoload": [
      "composer dump-autoload"
    ],
    "deploy-prod": [
      "gcloud app deploy app-prod.yaml --project=your_project_in_gcp --version=prod"
    ],
    "deploy-dev": [
      "gcloud app deploy app-dev.yaml --project=your_project_in_gcp --version=dev"
    ],
    "script": [
      "php vendor/cloudframework-io/backend-core-php8/runscript.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    },
    "process-timeout": 0
  }
}